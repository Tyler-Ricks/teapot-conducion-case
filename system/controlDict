FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     laplacianFoam;

startFrom       startTime;
startTime       0;
stopAt          endTime;
endTime         2000;         // seconds
deltaT          1;            // time step

writeControl    timeStep;
writeInterval   100;

purgeWrite      0;
writeFormat     ascii;
writePrecision  6;
writeCompression off;
timeFormat      general;
timePrecision   6;

functions
{
    surfaceAverageT
    {
        type            surfaceFieldValue;
        libs            ("libfieldFunctionObjects.so");
        log             yes;
        surfaceFormat   raw;
        writeControl    timeStep;
        writeInterval   100;
        writeFields     true;

        fields
        (
            T
        );

        operation       areaAverage;
        regionType      patch;
        name            wall;
    }
}

