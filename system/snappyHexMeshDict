{
    maxLocalCells 100000;    // limit per processor
    maxGlobalCells 200000;   // global cell budget
    minRefinementCells 10;   // donâ€™t drop refinement if less than this
    nCellsBetweenLevels 3;

    features ();             // skip feature edges for now

    /*refinementSurfaces
    {
        teapot
        {
            level (2 3);     // min and max refinement level near surface
            faceZone teapotZone;
            cellZone teapotCells;
            region teapotRegion;
        }
    }*/

    refinementSurfaces
        {
            teapot
            {
                level (2 2);
                //level (4 5);     // min and max refinement level near surface 
            }
        }
    /*
    refinementRegions
        {
            teapotRegion
            {
                mode inside;   // refine cells inside STL closed volume
                levels ((1E15 3));  // refine all inside cells to level 3
            }
        }
    */
    resolveFeatureAngle 30;  // refine where surface angle exceeds 30 deg
    refinementRegions {}
    locationInMesh (0.1 0.1 0.1);  // MUST be inside teapot volume
    allowFreeStandingZoneFaces true;
}

